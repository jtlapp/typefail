{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "rootDir": "src",
        "outDir": "build",
        "sourceMap": true
    },
    "exclude": [
        "test/failing"
    ]
}
